link(rel='stylesheet', href="/stylesheets/socket_chat_login.css", type="text/css")
link(rel='stylesheet', href="/bower_components/bootstrap/dist/css/bootstrap.css", type="text/css")
link(rel='stylesheet', href="/bower_components/font-awesome/css/font-awesome.css", type="text/css")
div.wrapper
  div.content-area
    div.nav-bar
      ul.nav-area
        li.nav-item.register
          a(href='/socketIO_chat/register') 注册
        li.nav-item.login.active
          a(href='/socketIO_chat/login') 登录
    div.content
      div.form_content.register.show
        div.register_content
          div.row-item
            label.item-label 用户名称：
            div.item-box.input-validate-box
              div
                input.form-control.input-validate#username(type="text")
                span.input-stars
                i.fa
              div.info.check-info
                span.tip
          div.row-item
            label.item-label 密码：
            div.item-box.input-validate-box
              div
                input.form-control.input-validate#password(type="password")
                span.input-stars
                i.fa
              div.info.check-info
                span.tip
          div.row-item
            label.item-label 确认密码：
            div.item-box.input-validate-box
              div
                input.form-control.input-validate#makesurepassword(type="password")
                span.input-stars
                i.fa
              div.info.check-info
                span.tip
          div.row-item
            label.item-label 邮箱:
            div.item-box.input-validate-box
              div
                input.form-control.input-validate#email(type="text")
                span.input-stars
                i.fa
              div.info.check-info
                span.tip
          button.btn.btn-success.logout_finish.disabled(type="button") 注册
script(src="/bower_components/jquery/dist/jquery.min.js")
script(src="/javascripts/jquery_validate.js")
script(src="/javascripts/socket_chat_login.js")
